//===============间距=======
.bt{border-top:2.6667vw solid $bg;
	&.dark{border-color:$black;}
	&.mini{border-width:1vw;}
}
.bb{border-bottom:1.5vw solid $bg;
	&.dark{border-color:$black;}
	&.mini{border-width:1vw;}
}


//===============vue-router 过渡=======
.slide-right-enter-active,.slide-left-enter-active,.slide-right-leave-active,.slide-left-leave-active { will-change: transform;transition: all 300ms;position: absolute;}
.slide-right-enter{transform: translateX(-100vw);opacity: 0; }
.slide-right-leave-active {transform: translateX(100vw); opacity: 0;}
.slide-left-enter {transform: translateX(100vw);opacity: 0;}
.slide-left-leave-active {transform: translateX(-100vw);opacity: 0;}


